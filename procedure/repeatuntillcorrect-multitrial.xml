<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">
  
  

  <!-- 
    Test for      <repeat_first_until_correct>true</repeat_first_until_correct>
    The first selected trial shoud be repeatedly presented
    -->
    
   <procedure xsi:type="apex:adaptiveProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>random</order>
      <nUp>1</nUp>
      <nDown>1</nDown>
      <adapt_parameter>snr</adapt_parameter>
      <start_value>3</start_value>
      <stop_after_type>reversals</stop_after_type>
      <stop_after>5</stop_after>
      <larger_is_easier>true</larger_is_easier>
      <repeat_first_until_correct>true</repeat_first_until_correct>
      <stepsizes>
        <stepsize begin="0" size="2"/>
        <stepsize begin="2" size="1"/>
       </stepsizes>
    </parameters>
    
    <trials>
      <trial id="trial1" >
        <answer>button_correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
      <trial id="trial2" >
        <answer>button_correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus2" />
      </trial>
      <trial id="trial3" >
        <answer>button_correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus3" />
      </trial>
      <trial id="trial4" >
        <answer>button_correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus4" />
      </trial>
      <trial id="trial5" >
        <answer>button_correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus5" />
      </trial>
      
      
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:isequal"/> 
    
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    
    <screen id="screen1" >
      <gridLayout height="1" width="2" id="main_layout">

        <button x="1" y="1" id="button_correct" >
          <text>correct</text>
        </button>
        <button x="2" y="1" id="button_wrong" >
          <text>wrong</text>
        </button>
        
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button_correct"/>
        <button id="button_wrong"/>
        </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="rawdata1" >
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
   </datablock>
   <datablock id="rawdata2" >
     <device>wavdevice</device>
     <uri>wd2.wav</uri>
   </datablock>
   <datablock id="rawdata3"  >
     <device>wavdevice</device>
     <uri>wd3.wav</uri>
   </datablock>
   <datablock id="rawdata4" >
     <device>wavdevice</device>
     <uri>wd4.wav</uri>
   </datablock>
   <datablock id="rawdata5"  >
     <device>wavdevice</device>
     <uri>wd5.wav</uri>
   </datablock>
   
   
 </datablocks><devices>
   <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
        <buffersize>4096</buffersize>
   </device>
 </devices>
  
  
  
  <filters>
    
  </filters><stimuli>
    <fixed_parameters>
      <parameter id="snr"/>
    </fixed_parameters>
    
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1" />
      </datablocks>
      <variableParameters/>
     <fixedParameters>
       <parameter id="snr">1</parameter>
     </fixedParameters>
    </stimulus>
    
    <stimulus id="stimulus2" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata2" />
      </datablocks>
      <variableParameters/>
      <fixedParameters>
        <parameter id="snr">2</parameter>
      </fixedParameters>
    </stimulus>
    
    <stimulus id="stimulus3" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata3" />
      </datablocks>
      <variableParameters/>
      <fixedParameters>
        <parameter id="snr">3</parameter>
      </fixedParameters>
    </stimulus>

  
  <stimulus id="stimulus4" >
    <description>Eenvoudige teststimulus</description>
    <datablocks>
      <datablock id="rawdata4" />
    </datablocks>
    <variableParameters/>
    <fixedParameters>
      <parameter id="snr">4</parameter>
    </fixedParameters>
  </stimulus>
  
  <stimulus id="stimulus5" >
    <description>Eenvoudige teststimulus</description>
    <datablocks>
      <datablock id="rawdata5" />
    </datablocks>
    <variableParameters/>
    <fixedParameters>
      <parameter id="snr">5</parameter>
    </fixedParameters>
  </stimulus>
  </stimuli>
  
  <connections/>
  
  
</apex:apex>
