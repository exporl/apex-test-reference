<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
  xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment" version="1">



  <!-- 
Try to autoconnect a stereo wavfile to a mono wavdevice    
    -->

  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>up</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>
      <trial id="trial2">
        <answer>up</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus2"/>
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <screen id="screen1">

      <gridLayout height="1" width="3" id="main_layout">
       <button x="1" y="1" id="up">
          <text>answer</text>
        </button>
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="up"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks>
    <uri_prefix>../stimuli</uri_prefix>
    <datablock id="rawdata1_left">
      <uri>wd1.wav</uri>
    </datablock>
    <datablock id="rawdata2_left">
      <uri>wd2.wav</uri>
    </datablock>
    <datablock id="rawdata3_right">
      <uri>wd3.wav</uri>
    </datablock>
    <datablock id="rawdata4_right">
      <uri>wd4.wav</uri>
    </datablock>

  </datablocks>

  <devices>
    <device id="wavdevice" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
    </device>
  </devices>




  <stimuli>
    <stimulus id="stimulus1">
      <datablocks>
        <simultaneous>
          <datablock id="rawdata1_left"/>
          <datablock id="rawdata3_right"/>
        </simultaneous>
      </datablocks>
    </stimulus>
    <stimulus id="stimulus2">
      <datablocks>
        <simultaneous>
          <datablock id="rawdata2_left"/>
          <datablock id="rawdata4_right"/>
        </simultaneous>
      </datablocks>
    </stimulus>
    
  </stimuli>


  <connections>
    <connection>
      <from>
        <id>rawdata1_left</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>rawdata2_left</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>rawdata3_right</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>1</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>rawdata4_right</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>1</channel>
      </to>
    </connection>
    
  </connections>




</apex:apex>
